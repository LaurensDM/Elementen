package domein;

public class Skills {

	private double accuracy;
	private int efficiëncy;
	private double power;
	private boolean reflection;
	private boolean trueMagic;
	
	

	public Skills(double accuracy, int efficiëncy, int power, boolean reflection, boolean trueMagic) {
		this.accuracy = accuracy;
		this.efficiëncy = efficiëncy;
		this.power = power;
		this.reflection = reflection;
		this.trueMagic = trueMagic;
	}

	public Skills() {
		this(0,0,0,false,false);
	}


	public void activateSkills(int skill) {
		switch (skill) {
		case 1:
			efficiëncy=2;
			break;
		case 5:
			accuracy=0.2;
			break;
		case 10:
			power=1.125;
			break;
		case 15:
			efficiëncy=4;
			break;
		case 20:
			accuracy=0.4;
			break;
		case 25:
			power = 2.25;
			break;
		case 30:
			reflection = true;
			break;
		case 35:
			accuracy = 0.8;
			break;
		case 40:
			efficiëncy = 8;
			break;
		case 45:
			power = 4.5;
			break;
		case 50:

			break;

		}
	}

}
