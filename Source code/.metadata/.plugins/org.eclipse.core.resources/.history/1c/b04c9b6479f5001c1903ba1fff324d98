package domein;

public class Skills {

	private int accuracy;
	private int efficiëncy;
	private double power;
	private boolean reflection;
	private boolean trueMagic;
	
	

	public Skills(double accuracy, int efficiëncy, double power, boolean reflection, boolean trueMagic) {
		this.accuracy = accuracy;
		this.efficiëncy = efficiëncy;
		this.power = power;
		this.reflection = reflection;
		this.trueMagic = trueMagic;
	}

	public Skills() {
		this(0,1,1,false,false);
	}


	public void activateSkills(int skill) {
		switch (skill) {
		case 1:
			efficiëncy=2;
			break;
		case 5:
			accuracy=2;
			break;
		case 10:
			power=1.125;
			break;
		case 15:
			efficiëncy=4;
			break;
		case 20:
			accuracy=2;
			break;
		case 25:
			power = 2.25;
			break;
		case 30:
			reflection = true;
			break;
		case 35:
			accuracy = 8;
			break;
		case 40:
			efficiëncy = 8;
			break;
		case 45:
			power = 4.5;
			break;
		case 50:
			trueMagic=true;
			break;

		}
	}

	public double getAccuracy() {
		return accuracy;
	}

	public int getEfficiëncy() {
		return efficiëncy;
	}

	public double getPower() {
		return power;
	}

	public boolean isReflection() {
		return reflection;
	}

	public boolean isTrueMagic() {
		return trueMagic;
	}
	
	

}
