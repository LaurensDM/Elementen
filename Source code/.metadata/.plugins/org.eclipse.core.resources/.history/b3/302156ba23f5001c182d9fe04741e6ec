package domein;

import java.util.ArrayList;
import java.util.Objects;

public class Player {

	private String name;
	private String wachtwoord;
	private String affinity;
	private int level;
	private int exp;
	private int money;
	private List<Items> bag = new ArrayList<>();

	public Player(String name, String wachtwoord, String affinity, int level, int exp, int money) {
		setName(name);
		setWachtwoord(wachtwoord);
		setAffinity(affinity);
		setLevel(level);
		setExp(exp);
		setMoney(money);
	}

	public Player(String name, String wachtwoord, String affinity) {
		this(name, wachtwoord, affinity, 1, 0, 100);
	}

	public String getName() {
		return name;
	}

	private void setName(String name) {
		if (name == null || name.length() < 3) {
			throw new IllegalArgumentException("Your username must have more than 2 characters!");
		}
		this.name = name;
	}

	public String getWachtwoord() {
		return wachtwoord;
	}

	private void setWachtwoord(String wachtwoord) {
		if (wachtwoord == null || wachtwoord.length() < 3 || !wachtwoord.matches("(\\w*\\d{1}){3,}")) {
			throw new IllegalArgumentException(
					"Uw wachtwoord moet uit minstens 3 characters bestaan en minstens 2 cijfers bevatten!");
		}
		this.wachtwoord = wachtwoord;
	}

	public String getAffinity() {
		return affinity;
	}

	private void setAffinity(String affinity) {
		this.affinity = affinity;
	}

	public int getLevel() {
		return level;
	}

	private void setLevel(int level) {
		this.level = level;
	}

	public int getExp() {
		return exp;
	}

	private void setExp(int exp) {
		this.exp = exp;
	}

	public int getMoney() {
		return money;
	}

	private void setMoney(int money) {
		this.money = money;
	}

	public void levelUp() {
		if (exp >= level * 1.5) {
			exp -= level * 1.5;
			level++;
		}
	}

	protected void addMoney(int value) {
		money += value;
	}

	protected void gainExp(int value) {
		exp += value;
	}

	@Override
	public int hashCode() {
		return Objects.hash(name);
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		Player other = (Player) obj;
		return Objects.equals(name, other.name);
	}

	@Override
	public String toString() {
		return "Player [name=" + name + ", affinity=" + affinity + "]";
	}

}
